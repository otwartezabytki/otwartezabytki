.footer-bottom
  .footer-copyright
    %p= t('layouts.application.footer.license')


  .footer-language
    %select#lang.select2
      - enabled_locales.each do |l|
        %option{:rel => "#{url_for(:locale => l)}", :name => l, :selected => ('selected' if (params[:locale] || I18n.locale).to_s == l.to_s)}
          = t("common.lang.#{l}")

  .footer-links.col-lg-3.col-md-3.col-md-offset-3
    - if @terms.present?
      = link_to t('users.terms_of_user.terms'), @terms, class: "footer-regulamin"
    - if @privacy.present?
      = link_to t('users.terms_of_user.privacy'), @privacy, class: "footer-prywatnosc"
